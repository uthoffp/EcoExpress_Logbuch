<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:text="Unterwegs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_unterwegs"
                android:layout_marginEnd="16dp"
                android:onClick="onClick"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" />

            <Button
                android:text="Blisse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn1"
                android:layout_marginEnd="16dp"
                android:onClick="onClick"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_unterwegs"
                android:layout_marginTop="24dp" />

            <Button
                android:text="Blumberger Damm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:id="@+id/btn2"
                app:layout_constraintTop_toBottomOf="@+id/btn1"
                app:layout_constraintEnd_toEndOf="@+id/btn1"
                app:layout_constraintStart_toStartOf="@+id/btn1" />

            <Button
                android:text="Berliner Allee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn3"
                android:onClick="onClick"
                app:layout_constraintTop_toBottomOf="@+id/btn2"
                app:layout_constraintEnd_toEndOf="@+id/btn1"
                app:layout_constraintStart_toStartOf="@+id/btn1" />

            <Button
                android:text="Danzieger"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn4"
                android:onClick="onClick"
                app:layout_constraintTop_toBottomOf="@+id/btn3"
                app:layout_constraintEnd_toEndOf="@+id/btn1"
                app:layout_constraintStart_toStartOf="@+id/btn1" />

            <Button
                android:text="Greiswalder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn5"
                android:onClick="onClick"
                app:layout_constraintTop_toBottomOf="@+id/btn4"
                app:layout_constraintEnd_toEndOf="@+id/btn1"
                app:layout_constraintStart_toStartOf="@+id/btn1" />

            <Button
                android:text="Hermann"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn6"
                android:onClick="onClick"
                app:layout_constraintTop_toBottomOf="@+id/btn5"
                app:layout_constraintEnd_toEndOf="@+id/btn1"
                app:layout_constraintStart_toStartOf="@+id/btn1" />

            <Button
                android:text="Hauptstraße"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn7"
                android:onClick="onClick"
                app:layout_constraintTop_toBottomOf="@+id/btn6"
                app:layout_constraintEnd_toEndOf="@+id/btn1"
                app:layout_constraintStart_toStartOf="@+id/btn1" />

            <Button
                android:text="Klosterstrasse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn8"
                android:onClick="onClick"
                app:layout_constraintTop_toBottomOf="@+id/btn7"
                app:layout_constraintEnd_toEndOf="@+id/btn1"
                app:layout_constraintStart_toStartOf="@+id/btn1" />

            <Button
                android:text="Leibnitz"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn9"
                android:onClick="onClick"
                app:layout_constraintTop_toBottomOf="@+id/btn8"
                app:layout_constraintEnd_toEndOf="@+id/btn1"
                app:layout_constraintStart_toStartOf="@+id/btn1" />

            <Button
                android:text="Mehringdam"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn10"
                android:onClick="onClick"
                app:layout_constraintTop_toBottomOf="@+id/btn9"
                app:layout_constraintEnd_toEndOf="@+id/btn1"
                app:layout_constraintStart_toStartOf="@+id/btn1" />

            <Button
                android:text="Schönwalder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn11"
                android:onClick="onClick"
                app:layout_constraintTop_toBottomOf="@+id/btn10"
                app:layout_constraintEnd_toEndOf="@+id/btn1"
                app:layout_constraintStart_toStartOf="@+id/btn1" />

            <Button
                android:text="Stettiner "
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn12"
                android:onClick="onClick"
                app:layout_constraintTop_toBottomOf="@+id/btn11"
                app:layout_constraintEnd_toEndOf="@+id/btn1"
                app:layout_constraintStart_toStartOf="@+id/btn1" />

            <Button
                android:text="Winterfeld"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn13"
                android:onClick="onClick"
                app:layout_constraintTop_toBottomOf="@+id/btn12"
                app:layout_constraintEnd_toEndOf="@+id/btn1"
                app:layout_constraintStart_toStartOf="@+id/btn1" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>