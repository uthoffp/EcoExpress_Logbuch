<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <Button
                    android:id="@+id/buero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:text="Büro" />

            <Button
                    android:id="@+id/bauhaus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:text="Bauhaus" />

            <Button
                    android:id="@+id/unterwegs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:text="Unterwegs" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="24dp">

                <Button
                        android:id="@+id/btn1"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:onClick="onClick"
                        android:layout_weight="0.5"
                        android:layout_gravity="center"
                        android:text="Blisse" />

                <Button
                        android:id="@+id/btn2"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="0.5"
                        android:onClick="onClick"
                        android:layout_gravity="center"
                        android:text="Blumberger Damm" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <Button
                        android:id="@+id/btn3"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="0.5"
                        android:onClick="onClick"
                        android:layout_gravity="center"
                        android:text="Berliner Allee" />

                <Button
                        android:id="@+id/btn4"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="0.5"
                        android:onClick="onClick"
                        android:layout_gravity="center"
                        android:text="Danzieger" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <Button
                        android:id="@+id/btn5"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="0.5"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:onClick="onClick"
                        android:layout_gravity="center"
                        android:text="Greiswalder" />

                <Button
                        android:id="@+id/btn6"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="0.5"
                        android:onClick="onClick"
                        android:layout_gravity="center"
                        android:text="Hermann" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <Button
                        android:id="@+id/btn7"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="0.5"
                        android:onClick="onClick"
                        android:layout_gravity="center"
                        android:text="Hauptstraße" />

                <Button
                        android:id="@+id/btn8"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="0.5"
                        android:onClick="onClick"
                        android:layout_gravity="center"
                        android:text="Klosterstrasse" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <Button
                        android:id="@+id/btn9"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="0.5"
                        android:onClick="onClick"
                        android:layout_gravity="center"
                        android:text="Leibnitz" />

                <Button
                        android:id="@+id/btn10"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="0.5"
                        android:onClick="onClick"
                        android:layout_gravity="center"
                        android:text="Mehringdam" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <Button
                        android:id="@+id/btn11"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="0.5"
                        android:onClick="onClick"
                        android:layout_gravity="center"
                        android:text="Schönwalder" />

                <Button
                        android:id="@+id/btn12"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="0.5"
                        android:onClick="onClick"
                        android:layout_gravity="center"
                        android:text="Stettiner " />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <Button
                        android:id="@+id/btn13"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="0.5"
                        android:onClick="onClick"
                        android:layout_gravity="center"
                        android:text="Winterfeld" />

                <Button
                        android:id="@+id/btn14"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="0.5"
                        android:layout_gravity="center"
                        android:visibility="invisible"
                        android:text="" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>